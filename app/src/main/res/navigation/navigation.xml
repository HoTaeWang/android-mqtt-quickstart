<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainActivity_dest">

    <fragment
        android:id="@+id/mainActivity_dest"
        android:name="io.bytehala.eclipsemqtt.sample.MainFragment"
        android:label="old_activity_main"
        tools:layout="@layout/old_activity_main" >

        <argument
            android:name="result"
            app:argType="android.os.Bundle"
            app:nullable="true"
            android:defaultValue="@null"/>

        <action
            android:id="@+id/action_new_connection"
            app:destination="@id/newConnection_dest" />

        <action
            android:id="@+id/action_new_connection_activity"
            app:destination="@id/newConnectionActivity_dest" />

        <action
            android:id="@+id/action_connection_details"
            app:destination="@id/connectionDetailsActivity_dest" />
    </fragment>

    <fragment
        android:id="@+id/newConnection_dest"
        android:name="io.bytehala.eclipsemqtt.sample.newconnection.NewConnectionFragment"
        android:label="newConnectionFragment"
        tools:layout="@layout/old_activity_new_connection">

        <action
            android:id="@+id/action_connect"
            app:destination="@id/mainActivity_dest"
            app:popUpTo="@id/mainActivity_dest"
            app:popUpToInclusive="true"
        />
    </fragment>

    <activity
        android:id="@+id/newConnectionActivity_dest"
        android:name="io.bytehala.eclipsemqtt.sample.newconnection.NewConnectionActivity"
        android:label="NewConnectionActivity"
        tools:layout="@layout/old_activity_new_connection"/>

    <activity
        android:id="@+id/connectionDetailsActivity_dest"
        android:name="io.bytehala.eclipsemqtt.sample.connectiondetails.ConnectionDetailsActivity"
        android:label="ConnectionDetailsActivity"
        tools:layout="@layout/old_activity_connection_details"
        />
</navigation>